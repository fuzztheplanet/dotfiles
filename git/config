[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[commit]
    gpgSign = true

[push]
    default = matching

[alias]
    a   = add --all
    ai  = add -i
    b   = branch
    bd  = branch -d
    bdd = branch -D
    c   = commit
    ca  = commit -a
    cm  = commit -m
    cam = commit -am
    l  = log --oneline
    lg = log --oneline --graph --decorate
    o  = checkout
    ob = checkout -b
    s  = show
    ss = status
