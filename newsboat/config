browser firefox

auto-reload yes
reload-time 180
reload-threads 40

color info black yellow
color background default default
color article default default
color listnormal white default
color listnormal_unread red default
color listfocus cyan default
color listfocus_unread cyan default

highlight feedlist "---.*---" blue default bold

bind-key "h" quit
bind-key "l" open
bind-key "j" next
bind-key "k" prev

macro v set browser "mpv %u" ; open-in-browser ; set browser firefox
